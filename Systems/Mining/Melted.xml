  <Item name="" identifier="titaniumMelted" category="Material" maxstacksize="1" Tags="smallitem,melted" canbepicked="true" cargocontaineridentifier="metalcrate" scale="0.2" impactsoundtag="impact_metal_light">
    <PreferredContainer primary="storagecab" minamount="0" maxamount="2" spawnprobability="1" />
    <PreferredContainer secondary="wreckstoragecab" minamount="0" maxamount="2" spawnprobability="0.06" />
    <PreferredContainer secondary="locker" />
    <Price baseprice="65" sold="false">
      <Price storeidentifier="merchantoutpost" multiplier="1.3" />
      <Price storeidentifier="merchantcity" multiplier="1.25" />
      <Price storeidentifier="merchantresearch" multiplier="1.1" />
      <Price storeidentifier="merchantmilitary" multiplier="1.1" />
      <Price storeidentifier="merchantmine" sold="true" multiplier="0.8" minavailable="5" />
    </Price>
    <InventoryIcon texture="%ModDir%/Systems/Mining/Img/hot.png" sourcerect="720,0,240,160" />
    <Sprite texture="%ModDir%/Systems/Mining/Img/hot.png" sourcerect="720,0,240,160" depth="0.55" angle="135" origin="0.5,0.5" />
    <Body width="65" height="80" density="50" />
    <LightComponent range="350.0" lightcolor="255,29,0,255" powerconsumption="3" MinVoltage="0.99" IsOn="true" castshadows="true" allowingameediting="false">
      <Sprite texture="%ModDir%/Systems/Reactor/icons_reactor.png" sourcerect="627,248,19,69" />
    </LightComponent>
    <Holdable slots="RightHand+LeftHand" msg="ItemMsgPickUpSelect" holdpos="90,10" handle1="-11,-7" holdangle="-45" handle2="-11,-7" pickingtime="5.0" attachable="true" reattachable="false">
      <StatusEffect type="OnActive" target="Character" setvalue="true" SpeedMultiplier="0.6">
        <Affliction identifier="Burn" strength="35" />
      </StatusEffect>
      <!-- Remove the item when fully used -->
      <StatusEffect type="OnBroken" target="This">
        <Remove />
      </StatusEffect>
      <!--Give the fuel rod a "hot" tag when it looses any condition -->
      <StatusEffect type="Always" target="This" duration="0.1" stackable="false" tags="hot">
        <Conditional condition="lt 100" />
      </StatusEffect>
      <!--Keep resetting the scale of the item to 0.5 if rod is at full condition -->
      <StatusEffect type="Always" target="This" disabledeltatime="true" setvalue="true" scale="0.2">
        <Conditional condition="eq 100" />
      </StatusEffect>
      <!--Keep resetting the scale of the item to 0.45 every half second if the rod is hot and give it voltage so it emits light -->
      <StatusEffect type="Always" target="This" disabledeltatime="true" delay="0.5" setvalue="true" scale="0.45" voltage="1">
        <Conditional hastag="hot" />
      </StatusEffect>
      <!--Make the rod loose condition if its contained in one of the listed containers -->
      <StatusEffect type="OnContained" target="This" disabledeltatime="false" scale="-0.1">
        <Conditional hastag="eq container" targetcontainer="true" />
      </StatusEffect>
      <!--Cause fire if the rod is hot AND if its in one of the listed containers -->
      <StatusEffect type="OnContained" target="This">
        <Conditional scale="lt 0.45" />
        <Fire />
      </StatusEffect>
      <!--If the rod's condition is 0, return it to 0.001, which enables me to use RequiredItem and will give reactor energy close to 0 and enables light to stay on -->
      <StatusEffect type="Always" targettype="This" disabledeltatime="true" delay="1" stackable="false" setvalue="true" condition="0.001">
        <Conditional condition="eq 0" />
      </StatusEffect>
      <!--If character holds a hot rod, give him exposure -->
      <StatusEffect type="OnContained" targettype="This,Character" disabledeltatime="true" delay="1" stackable="false">
        <Conditional hastag="hot" />
        <Affliction identifier="Burn" strength="35" />
      </StatusEffect>
      <!--Constantly emits radiation sickness -->
      <StatusEffect type="Always" target="NearbyCharacters" disabledeltatime="true" range="60" stackable="false">
        <Affliction identifier="Burn" strength="1" />
      </StatusEffect>
      <!--Make a hot rod sizzle in water -->
      <StatusEffect type="InWater" target="This">
        <ParticleEmitter particle="bubbles" anglemin="0" anglemax="360" particleamount="1" velocitymin="0" velocitymax="50" scalemin="1" scalemax="1" />
        <ParticleEmitter particle="extinguisher" anglemin="0" anglemax="360" velocitymin="5.0" velocitymax="50.0" particlespersecond="40" />
        <sound file="%ModDir%/Items/Reactor/bubbleloop.ogg" type="OnUse" range="300.0" loop="true" />
        <Conditional hastag="hot" />
      </StatusEffect>
      <!--If the hot rod isn't contained anywhere, make it start fire and give exposure to nearby characters  -->
      <StatusEffect type="Always" target="NearbyCharacters" disabledeltatime="true" range="100" stackable="true">
        <Affliction identifier="Burn" strength="10" />
      </StatusEffect>
    </Holdable>
    <AiTarget sightrange="1000" static="true" />
  </Item>
